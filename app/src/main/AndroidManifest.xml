<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.developer.ritot" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.developer.ritot.WatchFaceActivity"
            android:parentActivityName=".MainActivity"
            android:label="WatchFace"></activity>

        <activity
            android:name="com.android.developer.ritot.SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:label="Settings"></activity>

        <activity android:name=".NotificationActivity"
            android:parentActivityName=".MainActivity"
            android:label="Notifications"></activity>

        <activity android:name=".ProjectionColorActivity"
            android:parentActivityName=".MainActivity"
            android:label="Projection Color"></activity>



    </application>

</manifest>
